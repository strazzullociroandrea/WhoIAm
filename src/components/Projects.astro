---
import {Folder, Github, ExternalLink} from "lucide-react";
const projectsFeatured = [
    {
        title: "generateproj",
        description: "Interfaccia a riga di comando (CLI), pubblicata su npm, con lo scopo di automatizzare il setup iniziale di progetti software, permettendo agli sviluppatori di generare strutture di directory standardizzate con un singolo comando.",
        link: "#",
        tech: ["Nodejs", "npm", "JavaScript"],
        github: "https://github.com/strazzullociroandrea/WhoIAm/tree/main",
        live: "https://www.npmjs.com/package/generateproj"
    }
];
---

<section class="py-10 px-6 max-w-7xl mx-auto" id="progetti">
    <div class="text-center mb-10">
        <p class="text-primary font-mono text-xs tracking-[0.2em] uppercase mb-2">02. Progetti</p>
        <h2 class="gradient-text text-4xl font-bold">I miei progetti</h2>
    </div>

    <div className="space-y-24 mb-24">

        {
            projectsFeatured.map((project, index) => {
                return (
                        <>
                            <div
                                    key={project.title}
                                    className={`mt-5 grid lg:grid-cols-2 gap-8 items-center ${index % 2 === 1 ? 'lg:flex-row-reverse' : ''}`}
                            >
                                <div class={`order-1 ${index % 2 === 1 ? 'lg:order-2' : ''}`}>
                                    <div class="aspect-video rounded-xl bg-gradient-to-br from-primary/20 via-secondary to-primary/10 border border-border flex items-center justify-center group hover:border-primary/30 transition-all duration-300">
                                        <div class="text-center">
                                            <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-primary/10 flex items-center justify-center group-hover:scale-110 transition-transform">
                                                <Folder className="w-8 h-8 text-primary"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class={`order-2 ${index % 2 === 1 ? 'lg:order-1 lg:text-right' : ''}`}>
                                    <p class="text-primary code-font text-sm mb-2">Featured Project</p>
                                    <h3 class="text-2xl font-bold   mb-4">{project.title}</h3>
                                    <div class="glass-card p-6 rounded-xl mb-4">
                                        <p class="text-muted-foreground">{project.description}</p>
                                    </div>
                                    <div class={`flex flex-wrap gap-2 mb-4 ${index % 2 === 1 ? 'lg:justify-end' : ''}`}>
                                        {project.tech.map((tech) => (
                                                <span key={tech}
                                                      class=" text-sm text-muted-foreground ">{tech}</span>
                                        ))}
                                    </div>
                                    <div class={`flex gap-4 ${index % 2 === 1 ? 'lg:justify-end' : ''}`}>
                                        <a href={project.github} target="_blank"
                                           class="p-2 text-muted-foreground hover:text-primary transition-colors">
                                            <Github className="w-5 h-5"/>
                                        </a>
                                        <a href={project.live} target="_blank"
                                           class="p-2 text-muted-foreground hover:text-primary transition-colors">
                                            <ExternalLink className="w-5 h-5"/>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </>
                )
            })
        }
    </div>
</section>